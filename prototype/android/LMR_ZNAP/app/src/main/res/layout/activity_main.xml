<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@color/bg"
    android:weightSum="7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:orientation="horizontal"
        android:weightSum="1" >
        <ImageView
            android:id="@+id/znap_logo"
            android:layout_width="300dp"
            android:layout_weight="1"

            android:layout_height="90dp"
            android:src ="@drawable/znap_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/bQueueState"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Cтан черги"

            android:textAlignment="center"
            android:theme="@style/test"
            android:textColor="#2B2A2F"
            />

        <Button

            android:id="@+id/bRecordToZnap"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Запис до ЦНАП"
            android:textAlignment="center"
            android:theme="@style/test"
            android:textColor="#2B2A2F" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button

            android:id="@+id/bReceptionToOfficial"
            android:layout_width="290dp"
            android:layout_height="75dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="Запис на прийом до посадовця "

            android:theme="@style/test"
            android:textColor="#2B2A2F" />
        <Button

            android:id="@+id/bCheck"
            android:layout_width="290dp"
            android:layout_height="75dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginTop="-10dp"
            android:text="Перевірити стан виконання звернення"

            android:theme="@style/test"
            android:textColor="#2B2A2F" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="2" >


        <Button

            android:id="@+id/bLeaveReview"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Відгук"

            android:theme="@style/test"
            android:textColor="#2B2A2F" />

        <Button

            android:id="@+id/bServices"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Реєстр послуг"

            android:theme="@style/test"
            android:textColor="#2B2A2F" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="horizontal"
        android:weightSum="2" >
        <Button
            android:id="@+id/bOnline"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:text="Онлайн підтримка"
            android:theme="@style/test"
            android:textColor="#2B2A2F"
            android:layout_width="290dp" />


        <Button
            android:id="@+id/bAboutZNAP"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Про ЦНАП"
            android:theme="@style/test"
            android:textColor="#2B2A2F" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:orientation="horizontal"
        android:weightSum="1" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25"
        android:orientation="horizontal"
        android:weightSum="1" >

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bAboutZNAP"
            android:layout_marginTop="10dp"
            android:background="@color/bg"
            android:gravity="center">

            <ImageButton
                android:id="@+id/bOwnCabinet"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                app:srcCompat="@drawable/settings" />

            <ImageButton
                android:id="@+id/ibtFacebook"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@null"
                app:srcCompat="@drawable/facebook64" />


            <ImageButton
                android:id="@+id/ibtPayment"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/bOwnCabinet"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:background="@null"
                app:srcCompat="@drawable/payment" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>