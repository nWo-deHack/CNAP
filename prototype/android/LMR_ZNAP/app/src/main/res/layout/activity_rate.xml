<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.znap.lmr.lmr_znap.RateActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оберіть ЦНАП"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/znaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/znaps"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:padding="10dp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:background="#E0E0E0"
                android:ems="10"
                android:hint=" Ваш відгук"
                android:padding="10dp"

                android:textSize="20dp" />

            <TextView
                android:id="@+id/labelForQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="Оберіть враження від обслуговування"
                android:textColor="#000"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="45dp">

                <Button
                    android:id="@+id/btGood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/happy"
                    android:text="0"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/btBad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/sad"
                    android:text="1"
                    android:textColor="#fff" />
            </LinearLayout>

            <Button
                android:id="@+id/btLeaveReview"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Залишити відгук"
                android:textAlignment="center"
                android:layout_marginTop="70dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_gravity="center_horizontal"
                android:theme="@style/mainActButton" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>