<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.znap.lmr.lmr_znap.RateActivity">


    <EditText
        android:id="@+id/etDescription"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/znaps"
        android:layout_marginTop="20dp"
        android:background="#E0E0E0"
        android:ems="10"
        android:hint=" Ваш відгук"

        android:textSize="20dp" />

    <Spinner
        android:id="@+id/znaps"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp" />

    <Button
        android:id="@+id/btLeaveReview"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Залишити відгук"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_weight="1"
        android:textAlignment="center"
        android:theme="@style/mainActButton"/>


    <Button
        android:id="@+id/btBad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btGood"
        android:layout_alignBottom="@+id/btGood"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/sad"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="1"
        android:textColor="@android:color/transparent" />

    <Button
        android:id="@+id/btGood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btLeaveReview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/button"
        android:drawableTop="@drawable/happy"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="10dp"
        android:text="0"
        android:textColor="@android:color/transparent" />

    <TextView
        android:id="@+id/labelForQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btLeaveReview"
        android:layout_alignRight="@+id/btLeaveReview"
        android:layout_centerVertical="true"
        android:text="Оберіть враження від обслуговування"
        android:textColor="#000000"
        android:textSize="18dp" />

</RelativeLayout>