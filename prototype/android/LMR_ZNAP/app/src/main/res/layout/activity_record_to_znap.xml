<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.znap.lmr.lmr_znap.RecordToZnapActivity">

    <Spinner
        android:id="@+id/spinnerForZnaps"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textForZnap"
        android:layout_alignStart="@+id/textForZnap"
        android:layout_below="@+id/textForZnap"
        android:layout_marginTop="107dp"
        android:textAlignment="center" />



    <Button
        android:id="@+id/bTreg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:theme="@style/mainActButton"
        android:text="Зареєструватись " />

    <TextView
        android:id="@+id/textForZnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:textSize="15dp"
        android:text="Виберіть Центр Надання Адміністративних Послуг:" />


</RelativeLayout>